<form id="new_project" class="form-horizontal" role="form" action="/projects" method='post'>
	<fieldset>
		<legend>New Project</legend>
		<div class="form-group">
		    <label for="new-project-name" class="col-sm-2 control-label">Project Name</label>
		    <div class="col-sm-10">
		    	<input type="text" class="form-control" id="new-project-name" placeholder="Project Name">
		    </div>
	  	</div>
	  	<div class="form-group">
		    <label for="new-project-desription" class="col-sm-2 control-label">Description</label>
		    <div class="col-sm-10">
		    	<textarea class="form-control" id="new-project-description" placeholder="Project Description" rows=5 cols=30 ></textarea>
		    </div>
	  	</div>
	  	<div class="form-group">
		    <div class="col-sm-offset-2 col-sm-10">
		    	<button type="submit" class="btn btn-primary">Create</button>
		    </div>
	  	</div>
  	</fieldset>
</form>